<%- include('./partials/head') %>
<section id="products">
  <div class="container">
    <div class="row justify-content-center align-items-center">
      <div class="col-6">
        <form
          action="#"
          class="d-flex justify-content-center align-items-center"
          autocomplete="off"
        >
          <div class="col mb-3">
            <input type="text" name="search" id="input" class="form-control" />
          </div>
          <div class="col">
            <button class="btn btn-success mb-3" onclick="getSearch()">
              search
            </button>
          </div>
        </form>
        <div
          class="wrapper d-flex justify-content-center align-items-center flex-wrap"
        >
          <table class="table">
            <thead>
              <tr>
                <th scope="col">No</th>
                <th scope="col">Title</th>
                <th scope="col">Author</th>
                <th scope="col">Publisher</th>
                <th scope="col">Price</th>
                <th scope="col">Image</th>
              </tr>
            </thead>
            <% i=1 %>
            <tbody id="getBody"></tbody>
          </table>
          <nav
            aria-label="Page navigation justify-content-center align-items-center"
          >
            <ul class="pagination mx-auto">
              <li class="page-item">
                <a class="page-link" id="previous">Previous</a>
              </li>
              <li class="page-item">
                <a class="page-link">1</a>
              </li>
              <li class="page-item"><a class="page-link">2</a></li>
              <li class="page-item"><a class="page-link">3</a></li>
              <li class="page-item">
                <a class="page-link" id="next">Next</a>
              </li>
            </ul>
          </nav>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  #products {
    margin-top: 10em;
  }
</style>

<%- include('./partials/footer') %>
